{
    "name": "app4RM",
    "version": "0.0.1",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "description": "Business Application",
    "engines": {
        "node": "^16"
    },
    "dependencies": {
        "@sap-cloud-sdk/http-client": "^2.5",
        "@sap/audit-logging": "^5",
        "@sap/cds": "^6.6",
        "@sap/xsenv": "^3",
        "@sap/xssec": "^3",
        "axios": "^0.21.1",
        "debug": "^4.3",
        "easy-soap-request": "^4.1.3",
        "express": "^4",
        "hdb": "^0.19",
        "passport": "^0.4.1",
        "qs": "^6"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.19",
        "rimraf": "^3.0.2"
    },
    "sapux": [
        "app/resources/fiori",
        "app/riskmanagement"
    ],
    "scripts": {
        "start": "cds run",
        "watch-riskmanagement": "cds watch --open riskmanagement/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy app4RM --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "uaa": {
                "kind": "xsuaa"
            },
            "auth": {
                "[production]": {
                    "strategy": "JWT"
                },
                "[development]": {
                    "strategy": "mock",
                    "users": {
                        "joe": {
                            "roles": [
                                "Admin",
                                "Viewer"
                            ]
                        },
                        "julie": {
                            "roles": [
                                "Viewer"
                            ]
                        },
                        "bob": {
                            "roles": [
                                "Viewer"
                            ]
                        }
                    }
                }
            },
            "db": {
                "[production]": {
                    "kind": "hana-cloud",
                    "model": [
                        "db/data-config",
                        "db/data-test"
                    ]
                },
                "[development]": {
                    "kind": "sql",
                    "model": [
                        "db/data-config",
                        "db/data-test"
                    ]
                },
                "model": [
                    "db",
                    "srv"
                ]
            }
        }
    }
}